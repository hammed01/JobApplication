@model jobApplication.Models.EmailModel
@{
    ViewBag.Title = "SendMail";
}

<h2>SendMail</h2>

@using (Html.BeginForm("SendMail", "Mail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group row">
        @if (!string.IsNullOrEmpty(Model.ActionMessage))
        {
            if (Model.ActionStatus)
            {
                <div class="alert alert-success" role="alert">
                    <strong>@Model.ActionMessage</strong>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <strong>@Model.ActionMessage</strong>
                </div>
            }

        }
    </div>


    <div class="form-group">
        @Html.TextBoxFor(m => m.ToEMailAddress, new { @class = "form-control", @placeholder = "Email Address" })
        @Html.ValidationMessageFor(m => m.ToEMailAddress, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.bccEMailAddress, new { @class = "form-control", @placeholder = "bcc Email Address" })
        @Html.ValidationMessageFor(m => m.bccEMailAddress, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.ccEMailAddress, new { @class = "form-control", @placeholder = "cc Email Address" })
        @Html.ValidationMessageFor(m => m.ccEMailAddress, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Subject " })
        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Message" })
        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
    </div>

    <div class="form-group ">
        <button type="submit" id="btnLogin" class="btn  btn-primary">
            Submit
        </button>
    </div>



}
